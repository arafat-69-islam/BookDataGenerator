@{
    ViewData["Title"] = "Home Page";
}

<div class="controls">
    <select id="region-select">
        <option value="en-US">English (USA)</option>
        <option value="fr-FR">French (France)</option>
        <option value="de-DE">German (Germany)</option>
        <option value="es-ES">Spanish (Spain)</option>
        <option value="ja-JP">Japanese (Japan)</option>
    </select>

    <input type="number" id="seed-input" value="42">
    <button id="random-seed-btn">Random Seed</button>

    <div class="slider-container">
        <label>Likes: <span id="likes-value">0.0</span></label>
        <input type="range" id="likes-slider" min="0" max="10" step="0.1" value="0">
    </div>

    <div>
        <label>Reviews: </label>
        <input type="number" id="reviews-input" min="0" step="0.1" value="0">
    </div>

    <button id="export-csv-btn">Export to CSV</button>
</div>

<div id="loading-indicator" style="display: none;">Loading...</div>

<table id="book-table">
    <thead>
        <tr>
            <th>#</th>
            <th>ISBN</th>
            <th>Title</th>
            <th>Author</th>
            <th>Publisher</th>
            <th>Likes</th>
            <th>Reviews</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody id="book-table-body"></tbody>
</table>

@section Scripts {
    <script src="~/js/site.js"></script>
}
